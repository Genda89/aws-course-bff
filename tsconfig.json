{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@interfaces/*": ["types/*"],
      "@functions": ["handlers/index.ts"],
      "@functions/*": ["handlers/*"],
      "@mocks/*": ["database/mocks/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": false
  },
  "ts-node": {
    "esm": true
  }
}
